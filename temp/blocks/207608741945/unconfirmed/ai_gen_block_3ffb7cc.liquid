{% doc %}
  @prompt
    i want 3 icons beside each other showcasing quality, durability and affordability, can we make them all 3 fit by each other side, horizentally not vertically, i would like for the icons to be smaller in size so they could fit on the same row horizentally
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    flex-wrap: wrap;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_spacing }}px;
    flex: 0 1 auto;
    max-width: 150px;
  }

  .ai-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: none;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-feature-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
  }

  .ai-feature-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-features-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.7 }}px;
    }

    .ai-feature-item-{{ ai_gen_id }} {
      max-width: 120px;
    }

    .ai-feature-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-feature-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
      {% if block.settings.feature_1_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_1_description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z"/>
        <path d="M12 6V12L16 14"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
      {% if block.settings.feature_2_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_2_description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <circle cx="9" cy="21" r="1"/>
        <circle cx="20" cy="21" r="1"/>
        <path d="M1 1H5L7.68 14.39C7.77 14.78 8.11 15.06 8.5 15.06H19.4C19.79 15.06 20.13 14.78 20.22 14.39L23 6H6"/>
        <path d="M9 8L11 10L15 6"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
      {% if block.settings.feature_3_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_3_description }}</p>
      {% endif %}
    </div>
  </div>
</div>

