{% doc %}
  @prompt
    i want 3 icons beside each other showcasing quality, durability and affordability, can we make them all 3 fit by each other side, horizentally not vertically, i would like for the icons to be smaller in size so they could fit on the same row horizentally, perfect, i would just like to change the icons to water resisant, lifetime warranty, tarnish resistant
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    flex-wrap: wrap;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_spacing }}px;
    flex: 0 1 auto;
    max-width: 150px;
  }

  .ai-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: none;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-feature-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
  }

  .ai-feature-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-features-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.7 }}px;
    }

    .ai-feature-item-{{ ai_gen_id }} {
      max-width: 120px;
    }

    .ai-feature-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-feature-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2.69L17 7.19V13.69C17 17.69 14.5 21.19 12 22.19C9.5 21.19 7 17.69 7 13.69V7.19L12 2.69Z"/>
        <path d="M9 12L11 14L15 10"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
      {% if block.settings.feature_1_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_1_description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2L2 7L12 12L22 7L12 2Z"/>
        <path d="M2 17L12 22L22 17"/>
        <path d="M2 12L12 17L22 12"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
      {% if block.settings.feature_2_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_2_description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="ai-feature-item-{{ ai_gen_id }}">
    <div class="ai-feature-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2Z"/>
        <path d="M21 9H3C2.45 9 2 9.45 2 10V20C2 21.1 2.9 22 4 22H20C21.1 22 22 21.1 22 20V10C22 9.45 21.55 9 21 9Z"/>
        <path d="M12 6V9"/>
        <circle cx="12" cy="15" r="2"/>
      </svg>
    </div>
    <div class="ai-feature-content-{{ ai_gen_id }}">
      <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
      {% if block.settings.feature_3_description != blank %}
        <p class="ai-feature-description-{{ ai_gen_id }}">{{ block.settings.feature_3_description }}</p>
      {% endif %}
    </div>
  </div>
</div>

