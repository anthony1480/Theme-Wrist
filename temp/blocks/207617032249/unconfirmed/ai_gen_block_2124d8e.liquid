{% doc %}
  @prompt
    i want a 3 bullet point section to write benefits with a grey background 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-benefits-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-benefits-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-benefits-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-benefits-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-benefits-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-benefits-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    margin-top: 2px;
  }

  .ai-benefits-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-benefits-text-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-benefits-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-benefits-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }

    .ai-benefits-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-benefits-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-benefits-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-benefits-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <ul class="ai-benefits-list-{{ ai_gen_id }}">
      {% if block.settings.benefit_1 != blank %}
        <li class="ai-benefits-item-{{ ai_gen_id }}">
          <div class="ai-benefits-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <div class="ai-benefits-text-{{ ai_gen_id }}">{{ block.settings.benefit_1 }}</div>
        </li>
      {% endif %}

      {% if block.settings.benefit_2 != blank %}
        <li class="ai-benefits-item-{{ ai_gen_id }}">
          <div class="ai-benefits-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <div class="ai-benefits-text-{{ ai_gen_id }}">{{ block.settings.benefit_2 }}</div>
        </li>
      {% endif %}

      {% if block.settings.benefit_3 != blank %}
        <li class="ai-benefits-item-{{ ai_gen_id }}">
          <div class="ai-benefits-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <div class="ai-benefits-text-{{ ai_gen_id }}">{{ block.settings.benefit_3 }}</div>
        </li>
      {% endif %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Benefits list",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why choose us"
    },
    {
      "type": "textarea",
      "id": "benefit_1",
      "label": "Benefit 1",
      "default": "Free shipping on all orders over $50"
    },
    {
      "type": "textarea",
      "id": "benefit_2",
      "label": "Benefit 2",
      "default": "30-day money back guarantee"
    },
    {
      "type": "textarea",
      "id": "benefit_3",
      "label": "Benefit 3",
      "default": "24/7 customer support"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Container width",
      "default": 800
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Heading spacing",
      "default": 30
    },
    {
      "type": "range",
      "id": "item_spacing",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Item spacing",
      "default": 20
    },
    {
      "type": "range",
      "id": "icon_text_gap",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Icon to text gap",
      "default": 15
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Icon size",
      "default": 24
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Benefits list"
    }
  ]
}
{% endschema %}
